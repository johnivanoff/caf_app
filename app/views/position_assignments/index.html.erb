<h1>Listing position_assignments</h1>

<table>
  <tr>
    <th>Position</th>
    <th>Member</th>
    <th>Assignment start</th>
    <th>Assignment end</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @position_assignments.each do |position_assignment| %>
  <tr>
    <td><%= position_assignment.hq_position.position_name %></td>
    <td><%= position_assignment.member.last_name + ", " + position_assignment.member.first_name %></td>
    <td><%= position_assignment.assignment_start %></td>
    <td><%= position_assignment.assignment_end %></td>
    <td><%= position_assignment.notes %></td>
    <td><%= link_to 'Show', position_assignment %></td>
    <td><%= link_to 'Edit', edit_position_assignment_path(position_assignment) %></td>
    <td><%= link_to 'Destroy', position_assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

