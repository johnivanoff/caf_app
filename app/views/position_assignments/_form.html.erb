<script>
  $(function() {
    $( "#position_assignment_assignment_start" ).datepicker({
     dateFormat:"yy-mm-dd"
    });
    $( "#position_assignment_assignment_end" ).datepicker({
     dateFormat:"yy-mm-dd"
    });

  });
</script>

<%= form_for(@position_assignment) do |f| %>
  <% if @position_assignment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@position_assignment.errors.count, "error") %> prohibited this position_assignment from being saved:</h2>

      <ul>
      <% @position_assignment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class='row'>
  <div class="field col-sm-4">
    <%= f.label :member_id %><br />
    <%= f.collection_select :member_id, Member.ordered.all, :id, :full_name, options = {:prompt => true}, html_options = {:class => "styled-select boxsizingBorder"} %>
  </div>
  
  <div class="field col-sm-4">
    <%= f.label :hq_position_id %><br />
    <%= f.collection_select :hq_position_id, HqPosition.alpha_order.all, :id, :position_name, options = {:prompt => true}, html_options = {:class => "styled-select boxsizingBorder"} %>
  </div>
</div>
<div class='row'>
  <div class="field col-sm-4">
    <%= f.label :assignment_start %><br />
    <%= f.text_field :assignment_start %>
  </div>
  <div class="field col-sm-4">
    <%= f.label :assignment_end %> <span class="form-tip">leave blank for ongoing position</span><br />
    <%= f.text_field :assignment_end %>
  </div>
</div>
<div class='row'>
  <div class="field col-sm-8">
    <%= f.label :notes %><br />
    <%= f.text_area :notes, :rows => 5, :class => 'boxsizingBorder' %>
  </div>
</div>

  <div class="actions">
    <%= f.submit:data => { :disable_with => "Submitting ..." }, :class => "btn-default btn1" %>
  </div>
<% end %>
