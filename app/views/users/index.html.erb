<h1>Users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Roles</th>
    <th>Last Login</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td>n/a</td>
    <td><%= user.last_sign_in_at %></td>
  </tr>
<% end %>
</table>

<br />

<% if signed_in?%>
  <% if current_user.roles.any? {|role| role.name == "superuser" or role.name == "admin"} %>
    <%= link_to 'New User', new_user_path %>
  <% end %>
<% end %>