<%= form_for(@caf_document) do |f| %>
  <% if @caf_document.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@caf_document.errors.count, "error") %> prohibited this caf_document from being saved:</h2>

      <ul>
      <% @caf_document.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :document_category_id, 'Document Category' %><br />
    <%= f.collection_select  :document_category_id, DocumentCategory.all, :id, :category_name, options = {:prompt => true}, html_options = {:class => "styled-select boxsizingBorder"} %>
  </div>
  <div class="field">
    <%= f.label :toc, 'Table of Contents' %><br />
    <%= f.text_area :toc, :rows => 5, :class => 'boxsizingBorder' %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 5, :class => 'boxsizingBorder' %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, :rows => 5, :class => 'boxsizingBorder' %>
  </div>
  <div class="field">
    <%= f.label :file_url %><br />
    <%= f.text_field :file_url %>
  </div>
  <div class="field">
    <%= f.label :image_url %><br />
    <%= f.text_field :image_url %>
  </div>
  <div class="field">
    <%= f.label :published_date %><br />
    <%= f.date_select :published_date %>
  </div>
  <div class="field">
    <%= f.label :current %><br />
    <%= f.check_box :current %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
