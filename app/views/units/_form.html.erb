<script>
jQuery(function($){

   $('#unit_primary_phone').mask("(999) 999-9999? x99999",{placeholder:" "});

});
</script>

<%= form_for @unit, :html => {:multipart => true} do |f| %>
  <% if @unit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@unit.errors.count, "error") %> prohibited this unit from being saved:</h2>

      <ul>
      <% @unit.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="field col-sm-6">
    <%= f.label :unit_name %><br />
    <%= f.text_field :unit_name, :class => 'boxsizingBorder', :autofocus => true %>
  </div>
  <div class="field col-sm-6">
    <%= f.label :unit_type_id %><br />
    <%= f.collection_select :unit_type_id, UnitType.all, :id, :type_name, options = {:prompt => true}, html_options = {:class => "styled-select boxsizingBorder"} %>
  </div>
</div>
<div class="row">
  <div class="field col-sm-4">
    <%= f.label :airport_name %><br />
    <%= f.text_field :airport_name, :class => 'boxsizingBorder' %>
  </div>
  <div class="field col-sm-4">
    <%= f.label :address_1 %><br />
    <%= f.text_field :address_1, :class => 'boxsizingBorder' %>
  </div>
  <div class="field col-sm-4">
    <%= f.label :address_2 %><br />
    <%= f.text_field :address_2, :class => 'boxsizingBorder' %>
  </div>
</div>
<div class="row">
  <div class="field col-sm-4">
    <%= f.label :city %><br />
    <%= f.text_field :city, :class => 'boxsizingBorder' %>
  </div>
  <div class="field col-sm-4">
    <%= f.label :state %><br />
    <%= f.text_field :state, :class => 'boxsizingBorder' %>
  </div>
  <div class="field col-sm-4">
    <%= f.label :postal_code %><br />
    <%= f.text_field :postal_code, :class => 'boxsizingBorder' %>
  </div>
</div>
<div class="row">
  <div class="field col-sm-6">
    <%= f.label :latitude %><br />
    <%= f.text_field :latitude, :class => 'boxsizingBorder' %>
  </div>
  <div class="field col-sm-6">
    <%= f.label :longitude %><br />
    <%= f.text_field :longitude, :class => 'boxsizingBorder' %>
  </div>
</div>

<div class="row">
  <div class="field col-sm-4">
    <%= f.label :primary_phone %><br />
    <%= f.text_field :primary_phone, :class => 'boxsizingBorder' %>
  </div>
  <div class="field col-sm-4">
    <%= f.label :primary_email %><br />
    <%= f.text_field :primary_email, :class => 'boxsizingBorder' %>
  </div>
  <div class="field col-sm-4">
    <%= f.label :website %><br />
    <%= f.text_field :website, :class => 'boxsizingBorder' %>
  </div>
</div>
<div class="row">
  <div class="field col-sm-12">
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => '5', :class => 'boxsizingBorder' %>
  </div>
</div>
<div class="row">
  <div class="field col-sm-4">
    <%= f.label :unit_logo %><br />
    <%= f.file_field :unit_logo, :class => 'boxsizingBorder' %>
    <% if !@unit.unit_logo.blank? %>
      <%= image_tag @unit.unit_logo.url(:directory_size).to_s %>
    <% end %>
  </div>
  <div class="field col-sm-4">
    <%= f.label :museum %><br />
    <%= f.check_box :museum %>Unit has museum? (check for yes)
  </div>
</div>
<hr />
  <div class="fields">
  <%= f.fields_for :social_links do |builder| %>
    <%= render "social_link_fields", :f => builder %>
  <% end %>
  <%= link_to_add_fields "Add Social Link", f, :social_links %>
  </div>
<hr />
  <div class="actions">
    <%= f.submit:data => { :disable_with => "Submitting ..." }, :class => "btn-default btn1" %>
  </div>
<% end %>
