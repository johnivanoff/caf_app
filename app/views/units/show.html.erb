<h1><%= @unit.unit_name %> <span><%= @unit.city %>, <%= @unit.state %></span></h1>
  
<div class="col-xs-12 col-sm-3">
    <div class="blocchi-unit">
      <% if @unit.unit_logo? %>
      <img src="/uploads/unit_logos/<%= @unit.unit_logo %>" width="100%" />
      <% else %>
      <img src="http://caf.polarbeardesign.net/uploads/unit_logos/default_unit_logo.jpg" />
      <% end %>
    </div>
</div>

<div class="col-xs-12 col-sm-4">
  <p><strong>Address:</strong><br>
      <% if !@unit.airport_name.blank? %>
        <%= @unit.airport_name %><br />
      <% end %>
      <%= @unit.address_1 %><br />
      <% if !@unit.address_2.blank? %>
        <%= @unit.address_2 %><br />
      <% end %>
        <%= @unit.city %>, <%= @unit.state %> <%= @unit.postal_code %>
  </p>
  <p><strong>Contact number:</strong><br>
   <%= @unit.primary_phone %>
  </p>
  <p><strong>Website:</strong><br>
  <%= link_to @unit.website, @unit.website, :target => "_blank" %>
  </p>
</div>

<div class="col-xs-12 col-sm-3">
  <div class="socialunit">
  <h4>Follow Us</h4>
    <% if !@unit.social_links.blank? %>
      <% @unit.social_links.each do |social_link| %>
        <li><a href="<%= social_link.brand_url %>" target="_blank" ><i class="fa <%= social_link.social_brand.brand_icon %>"></i><%= social_link.social_brand.social_brand_name %></a></li>
      <% end %>
  
  
    <% end %>
  





  </div>
</div>

<div class="col-xs-12 col-sm-12 moreinfo">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#aboutus" data-toggle="tab"><i class="fa fa-info-circle"></i> About</a></li>
            <li><a href="#aircraft" data-toggle="tab"><i class="fa fa-plane"></i> Aircraft  x<%= @unit.aircrafts.count %></a></li>
            <li><a href="#events" data-toggle="tab"><i class="fa fa-calendar"></i> Events  x<%= @unit.events.count %></a></li>
            <li><a href="#more" data-toggle="tab"><i class="fa fa-plus-square-o"></i> More</a></li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane fade in active" id="aboutus">
              <div class="media">
              
                <div class="media-body">
                  <p><%= markdown @unit.description %></p>
                </div>
              </div>
            </div>
            <div class="tab-pane fade" id="aircraft">
              <div class="media">
              
                <div class="media-body">
                          <% if !@unit.aircrafts.blank? %>
                          <% @unit.aircrafts.each do |aircraft| %>
                             <div class="row">
                               <div class="col-sm-3">
                                <% if aircraft.profile_photo? %>
                                  <img src="<%= '/uploads/aircraft_profile_photos/' + aircraft.profile_photo %>" width="100%" class="profile_photo" />
                                <% else %>
                                  <img src='/uploads/aircraft_profile_photos/default_2.jpg' width="250px" class="profile_photo" />
                                <% end %>
                               </div>
                               <div class="col-sm-9">
                                 <h2><%= link_to aircraft.aircraft_type.aircraft_type_designation + ' ' + aircraft.aircraft_type.aircraft_name + ' ' + aircraft.name, aircraft_path(aircraft) %></h2>
                                 <p><%= aircraft.aircraft_type.description %></p>
                               </div>
                             </div>
                          <% end %>
                          <% else %>
                          <p>No aircraft currently assigned.</p>
                          <% end %>
                </div>
              </div>
            </div>
            <div class="tab-pane fade" id="events">
              <div class="media">
              
                <div class="media-body">
                  <% if !@unit.events.blank? %>
                  <% @unit.events.each do |event| %>
                   <div class="row event-row">
                     <div class="col-sm-3">
                      <% if event.event_start.strftime("%b %d" ) == event.event_end.strftime("%b %d") %>
                        <div class="calendar-css">
                          <div class="calendar_month">
                            <%= event.event_start.strftime("%b") %>
                          </div>
                          <div class="calendar_date">
                            <%= event.event_start.strftime("%d") %>
                          </div>
                        </div>
                        <% else %>
                        <div class="calendar-css">
                          <div class="calendar_month">
                            <%= event.event_start.strftime("%b") %>
                          </div>
                          <div class="calendar_date">
                            <%= event.event_start.strftime("%d") %>
                          </div>
                        </div>
                        <span style="display: inline-block; font-size: 3em; margin: 0 0 0 0;">&#8211; </span>
                        <div class="calendar-css">
                          <div class="calendar_month">
                            <%= event.event_end.strftime("%b") %>
                          </div>
                          <div class="calendar_date">
                            <%= event.event_end.strftime("%d") %>
                          </div>
                        </div>
                      <% end %>
                    </div>
                    <div class="col-sm-9">
                     <h2><%= link_to event.event_title, event_path(event) %></h2>
                     <p><%= event.details %></p>
                    </div>
                    </div>
                  <% end %>
                  <% else %>
                    <p>No events currently scheduled.</p>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="tab-pane fade" id="more">
              <div class="media">
              
                <div class="media-body">
                  <p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat. </p>
                </div>
              </div>
            </div>
          </div>
  
</div>	  

