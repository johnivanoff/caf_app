<div class='row mt'>
  <div class='col-sm-12'>
    <h2><%= "Diff between Version #{@version.id} and Current Version" %></h2>
    <style><%= Diffy::CSS %></style>
    <div class='well diff'>
      <p>
        <strong>Parent id:</strong>
        <%= diff(@version.reify.parent_id, @menu.parent_id) %>
      </p>
      <p>
        <strong>Display:</strong>
        <%= diff(@version.reify.display, @menu.display) %>
      </p>
      <p>
        <strong>URL:</strong>
        <%= diff(@version.reify.url, @menu.url) %>
      </p>
      <p>
        <strong>Position:</strong>
        <%= diff(@version.reify.position, @menu.position) %>
      </p>
</div>

    <p>
    <%= "Version authored by #{find_version_author_name(@version)} 
on #{@version.created_at} by '#{@version.event.humanize}'." %>
    </p>
  </div>
</div>
<div class='fr'>
  <%= link_to 'Back', edit_menu_path(@menu), 
:class => 'btn btn-danger' %>
  <%= link_to 'Rollback', rollback_menu_version_path(@menu, @version), 
:class => 'btn btn-primary', :method => 'put' %>
</div>