<h1>Term</h1>

<p>
  <b>Position:</b>
  <%= @term.position.position_name %>
</p>

<p>
  <b>Held by:</b>
  <%= @term.member.first_name + ' ' + @term.member.last_name %>
</p>

<p>
  <b>Term:</b>
  <%= @term.term_start.strftime("%b %d, %Y") + ' - ' + @term.term_end.strftime("%b %d, %Y") %>
</p>


<% if signed_in?%>
  <% if current_user.roles.any? {|role| role.name == "superuser" or role.name == "admin"} %>
    <div class="admin-section" >
      <h2>Admin</h2>
        <%= link_to 'Edit', edit_term_path(@term) %> |
        <%= link_to 'Back', terms_path %>

        <%#= render 'versions', :position => @position %>
    </div>
  <% end %>
<% end %>