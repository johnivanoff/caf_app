<h1>Social Links</h1>

<table>
  <tr>
    <th>Unit</th>
    <th>Social Brand</th>
    <th>Brand URL</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @social_links.each do |social_link| %>
  <tr>
    <td><%= social_link.unit.unit_name %></td>
    <td>
      <% if !social_link.social_brand.blank? %>
        <%= social_link.social_brand.social_brand_name %>
      <% end %>
    </td>
    <td><%= social_link.brand_url %></td>
    <td><%= link_to 'Show', social_link %></td>
    <td><%= link_to 'Edit', edit_social_link_path(social_link) %></td>
    <td><%= link_to 'Destroy', social_link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />


<% if signed_in?%>
  <% if current_user.roles.any? {|role| role.name == "superuser" or role.name == "admin"} %>
    <div class="admin-section" >
      <h2>Admin Social Links</h2>
      <%= link_to 'New Social link', new_social_link_path %>
    </div>
  <% end %>
<% end %>