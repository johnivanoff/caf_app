<h1>Listing content_categories</h1>

<table>
  <tr>
    <th>Category name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @content_categories.each do |content_category| %>
  <tr>
    <td><%= content_category.category_name %></td>
    <td><%= content_category.description %></td>
    <td><%= link_to 'Show', content_category %></td>
    <td><%= link_to 'Edit', edit_content_category_path(content_category) %></td>
    <td><%= link_to 'Destroy', content_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

