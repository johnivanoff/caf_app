<%= render "scripts" %>

<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="field col-sm-4">
    <%= f.label :event_title %><br />
    <%= f.text_field :event_title, :autofocus => true %>
  </div>
  <div class="field col-sm-4"
    <%= f.label :unit_id, 'Unit' %><br />
    <%= f.collection_select :unit_id, Unit.alpha_order.all, :id, :unit_name, options = {:prompt => true}, html_options = {:class => "styled-select boxsizingBorder"} %>
  </div>
  <div class="field col-sm-4"
    <%= f.label :location_id %><br />
    <%= f.text_field :location_id %>
  </div>
</div>
<div class="row">
  <div class="field col-sm-4">
    <%= f.label :event_start %><br />
    <%= f.text_field :event_start %>
  </div>
  <div class="field col-sm-4">
    <%= f.label :event_end %><br />
    <%= f.text_field :event_end %>
  </div>
</div>

  <div class="field">
    <%= f.label :event_URL %><br />
    <%= f.text_field :event_URL %>
  </div>
  <div class="field">
    <%= f.label :contact_info %><br />
    <%= f.text_field :contact_info %>
  </div>
  <div class="field">
    <%= f.label :details %><br />
    <%= f.text_area :details, :rows => 5, :class => 'boxsizingBorder' %>
  </div>
  <div class="field">
    <%= f.label :graphic_address %><br />
    <%= f.text_field :graphic_address %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
